// import GeolocationExample from './geolocation_example.js'
import AsyncStorageExample from './lugie_test/async_storage_example.js'
import { NavigationContainer } from '@react-navigation/native';
import { createNativeStackNavigator } from '@react-navigation/native-stack';
import HomeScreen from './lugie_test/screens/HomeScreen';
import DetailsScreen from './lugie_test/screens/DetailsScreen';


const Stack = createNativeStackNavigator();

function App() {
  return (
    <NavigationContainer>
      <Stack.Navigator>
        <Stack.Screen name="Home" component={HomeScreen} />
        <Stack.Screen name="Details" component={DetailsScreen} />
      </Stack.Navigator>
    </NavigationContainer>
  );
}

